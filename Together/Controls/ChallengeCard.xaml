<UserControl x:Class="Together.Presentation.Controls.ChallengeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <materialDesign:Card Margin="8" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Category Badge -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    CornerRadius="12"
                    Padding="8,4"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,8">
                <TextBlock Text="{Binding Category, StringFormat='{}{0}'}" 
                           Foreground="White"
                           FontSize="12"
                           FontWeight="SemiBold"/>
            </Border>

            <!-- Title -->
            <TextBlock Grid.Row="1" 
                       Text="{Binding Title}"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <!-- Description -->
            <TextBlock Grid.Row="2" 
                       Text="{Binding Description}"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,0,0,12"/>

            <!-- Points and Status -->
            <Grid Grid.Row="3" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Points -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Star" 
                                           VerticalAlignment="Center"
                                           Foreground="#FFD700"
                                           Width="20"
                                           Height="20"/>
                    <TextBlock Text="{Binding Points, StringFormat='{}{0} points'}"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Completion Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- User 1 Status -->
                    <materialDesign:PackIcon Kind="CheckCircle" 
                                           Width="24"
                                           Height="24"
                                           Margin="0,0,8,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedByUser1}" Value="True">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <!-- User 2 Status -->
                    <materialDesign:PackIcon Kind="CheckCircle" 
                                           Width="24"
                                           Height="24">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedByUser2}" Value="True">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>

            <!-- Expiration Info -->
            <TextBlock Grid.Row="4" 
                       FontSize="12"
                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="{Binding ExpiresAt, StringFormat='Expires: {0:MMM dd, yyyy h:mm tt}'}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                <Setter Property="Text" Value="Expired"/>
                                <Setter Property="Foreground" Value="#F44336"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFullyCompleted}" Value="True">
                                <Setter Property="Text" Value="âœ“ Completed by both partners!"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </materialDesign:Card>
</UserControl>
