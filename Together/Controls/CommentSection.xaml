<UserControl x:Class="Together.Presentation.Controls.CommentSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <StackPanel>
        <!-- Comments List -->
        <ScrollViewer MaxHeight="300" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,12">
            <ItemsControl ItemsSource="{Binding Comments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Author Profile Picture -->
                            <Border Grid.Column="0"
                                    Width="32" Height="32"
                                    CornerRadius="16"
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Top">
                                <Border.Clip>
                                    <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                                </Border.Clip>
                                <Image Source="{Binding Author.ProfilePictureUrl}" 
                                       Stretch="UniformToFill"
                                       Visibility="{Binding Author.ProfilePictureUrl, Converter={StaticResource BoolToVis}}"/>
                            </Border>

                            <!-- Comment Content -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Author.Username}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Content}"
                                           TextWrapping="Wrap"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="0,2,0,2"/>
                                <TextBlock Text="{Binding TimeAgo}"
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Comment Input -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Text="{Binding CommentText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Write a comment..."
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     MaxLength="300"
                     AcceptsReturn="False"
                     Margin="0,0,8,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding CharacterCount}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,4"/>
                <Button Command="{Binding AddCommentCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        IsEnabled="{Binding CanAddComment}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Send" 
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,4,0"/>
                        <TextBlock Text="Post" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Loading Indicator -->
        <ProgressBar Style="{StaticResource MaterialDesignLinearProgressBar}"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                     Margin="0,8,0,0"/>
    </StackPanel>
</UserControl>
