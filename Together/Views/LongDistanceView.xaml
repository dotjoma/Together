<UserControl x:Class="Together.Presentation.Views.LongDistanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:Together.Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <materialDesign:PackIcon Kind="HeartMultiple" 
                                       Width="40" 
                                       Height="40"
                                       VerticalAlignment="Center"
                                       Foreground="#E91E63"/>
                <StackPanel Margin="16,0,0,0">
                    <TextBlock Text="Long Distance Love" 
                              Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                              FontWeight="Bold"/>
                    <TextBlock Text="Stay connected across the miles" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </StackPanel>

            <!-- Distance Widget -->
            <controls:DistanceWidget DataContext="{Binding DistanceWidgetViewModel}"/>

            <!-- Location Settings Button -->
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                   Command="{Binding OpenLocationSettingsCommand}"
                   Margin="8,16,8,8"
                   HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="MapMarkerEdit" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Update Location Settings" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Tips Card -->
            <materialDesign:Card Padding="16" Margin="8,16,8,8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <materialDesign:PackIcon Kind="Lightbulb" 
                                               Width="24" 
                                               Height="24"
                                               VerticalAlignment="Center"
                                               Foreground="#FFC107"/>
                        <TextBlock Text="Tips for Long Distance" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl>
                        <ItemsControl.Items>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon Kind="Check" 
                                                       VerticalAlignment="Top"
                                                       Foreground="#4CAF50"
                                                       Margin="0,2,8,0"/>
                                <TextBlock Text="Schedule regular video calls during optimal windows"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon Kind="Check" 
                                                       VerticalAlignment="Top"
                                                       Foreground="#4CAF50"
                                                       Margin="0,2,8,0"/>
                                <TextBlock Text="Use the shared journal to stay connected daily"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon Kind="Check" 
                                                       VerticalAlignment="Top"
                                                       Foreground="#4CAF50"
                                                       Margin="0,2,8,0"/>
                                <TextBlock Text="Complete daily challenges together"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon Kind="Check" 
                                                       VerticalAlignment="Top"
                                                       Foreground="#4CAF50"
                                                       Margin="0,2,8,0"/>
                                <TextBlock Text="Share your mood to help your partner understand you"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <materialDesign:PackIcon Kind="Check" 
                                                       VerticalAlignment="Top"
                                                       Foreground="#4CAF50"
                                                       Margin="0,2,8,0"/>
                                <TextBlock Text="Plan your next meeting to have something to look forward to"
                                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
