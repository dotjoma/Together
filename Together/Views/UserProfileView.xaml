<UserControl x:Class="Together.Presentation.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Together.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBoolConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Loading Indicator -->
        <ProgressBar Grid.Row="0" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                     Margin="0,0,0,10"/>

        <!-- Error Message -->
        <materialDesign:Card Grid.Row="0" 
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisConverter}}"
                            Background="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Margin="0,0,0,10">
            <TextBlock Text="{Binding ErrorMessage}" 
                      Foreground="White" 
                      Padding="10"
                      TextWrapping="Wrap"/>
        </materialDesign:Card>

        <!-- Profile Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Profile Header -->
                <materialDesign:Card Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Picture -->
                        <Border Grid.Column="0" 
                               Width="120" 
                               Height="120" 
                               CornerRadius="60"
                               BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                               BorderThickness="3"
                               Margin="0,0,20,0">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Profile.ProfilePictureUrl}" 
                                          Stretch="UniformToFill"/>
                            </Border.Background>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Profile.ProfilePictureUrl}" Value="{x:Null}">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <materialDesign:PackIcon Kind="Account" 
                                                    Width="60" 
                                                    Height="60"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource MaterialDesignBody}">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Profile.ProfilePictureUrl}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Border>

                        <!-- Profile Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Profile.Username}" 
                                      Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Profile.Email}" 
                                      Style="{StaticResource MaterialDesignBody2TextBlock}"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      Margin="0,0,0,10"/>
                            
                            <!-- Follower/Following Counts -->
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                    <TextBlock Text="{Binding Profile.FollowerCount}" 
                                              FontWeight="Bold"
                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="Followers"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Profile.FollowingCount}" 
                                              FontWeight="Bold"
                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="Following"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Edit Button -->
                        <Button Grid.Column="2" 
                               Content="Edit Profile"
                               Command="{Binding EditProfileCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               VerticalAlignment="Top"
                               Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Bio Section -->
                <materialDesign:Card Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Bio" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,10"/>

                        <!-- View Mode -->
                        <TextBlock Text="{Binding Profile.Bio}" 
                                  TextWrapping="Wrap"
                                  Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Profile.Bio}" Value="{x:Null}">
                                            <Setter Property="Text" Value="No bio added yet"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Edit Mode -->
                        <TextBox Text="{Binding EditBio, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                MaxLength="500"
                                Height="100"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Tell us about yourself..."
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Visibility Settings -->
                <materialDesign:Card Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Profile Visibility" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,10"/>

                        <!-- View Mode -->
                        <TextBlock Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}">
                            <Run Text="Current visibility:"/>
                            <Run Text="{Binding Profile.Visibility}" FontWeight="Bold"/>
                        </TextBlock>

                        <!-- Edit Mode -->
                        <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                            <RadioButton Content="Public - Anyone can see your profile"
                                        GroupName="Visibility"
                                        IsChecked="{Binding EditVisibility, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Public}"
                                        Margin="0,0,0,10"/>
                            <RadioButton Content="Friends Only - Only followers can see your profile"
                                        GroupName="Visibility"
                                        IsChecked="{Binding EditVisibility, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=FriendsOnly}"
                                        Margin="0,0,0,10"/>
                            <RadioButton Content="Private - Only you can see your profile"
                                        GroupName="Visibility"
                                        IsChecked="{Binding EditVisibility, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Private}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Profile Picture Upload (Edit Mode Only) -->
                <materialDesign:Card Padding="20" 
                                    Margin="0,0,0,20"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel>
                        <TextBlock Text="Profile Picture" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,10"/>
                        
                        <Button Command="{Binding SelectImageCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Image" Margin="0,0,5,0"/>
                                <TextBlock Text="Select Image"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="{Binding SelectedImageFileName}"
                                  Visibility="{Binding SelectedImageFileName, Converter={StaticResource StringToVisConverter}}"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Action Buttons (Edit Mode Only) -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                    <Button Content="Cancel"
                           Command="{Binding CancelEditCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Margin="0,0,10,0"/>
                    <Button Content="Save Changes"
                           Command="{Binding SaveProfileCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
